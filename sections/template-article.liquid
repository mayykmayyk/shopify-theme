<article>
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'article_title' %}
        <div class="flex center justify-center">
          <div class="max-w-7xl text-center">
            <a href="{{ blog.url }}" class="text-base uupercase text-gray-500 hover:text-gray-900 font-bold">{{ blog.title }}</a>
            <h1 class="text-4xl md:text-6xl font-medium">{{ article.title }}</h1>
          </div>
        </div>
      {% when 'article_author' %}
        {% if section.settings.enable_author %}
          <div class="flex item-center justify-center">
            <div class="max-w-7xl text-center">
              <small>{{ article.author }}</small>
            </div>
          </div>
        {% endif %}
      {% when 'article_publish_date' %}
        {% if section.settings.enable_published_date %}
          <div class="flex item-center justify-center">
            <div class="max-w-7xl text-center">
              <time datetime="{{ article.published_at | date: '%Y-%m-$d' }}">{{ article.published_at | date: format: 'on_date' }}</time>
            </div>
          </div>
        {% endif %}
      {% when 'article_featured_image' %}
        <div class="overflow-hidden max-w-7xl bg-green-400 rounded-lg mx-2 md:mx-auto my-4">
          {% if article.image != blank %}
            <img class="w-full h-80 md:h-96 object-cover object-center" src="{{ article.image | image_url: width: 960 }}" width="{{ article.image.width }}" height="{{ article.image.height }}" alt="{{ article.image.alt }}">
          {% else %}
            {% assign placeholder_image = 'lifestyle-1' %}
            {{ placeholder_image | placeholder_svg_tag: 'w-full h80 md:h-96 object-cover object-center p-5'}}
          {% endif %}
        </div>
      {% when 'article_content' %}
        <div class="flex items-center justify-center mt-5">
          <div class="max-w-4xl px-2">
            {{ article.content }}
          </div>
        </div>
      {% else %}
    {% endcase %}
  {% endfor %}
</article>

{% schema %}
  {
    "name": "Template Article",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_author",
        "default": true,
        "label": "Display Author Name"
      },
      {
        "type": "checkbox",
        "id": "enable_published_date",
        "default": true,
        "label": "Display Publish Date"
      }
    ],
    "blocks": [
      {
        "type": "article_title",
        "name": "Title",
        "limit": 1,
      },
      {
        "type": "article_author",
        "name": "Author",
        "limit": 1
      },
      {
        "type": "article_publish_date",
        "name": "Publish Date",
        "limit": 1,
      },
      {
        "type": "article_featured_image",
        "name": "Featured Image",
        "limit": 1
      },
      {
        "type": "article_content",
        "name": "Content",
        "limit": 1
      }
    ]
  }
{% endschema %}
